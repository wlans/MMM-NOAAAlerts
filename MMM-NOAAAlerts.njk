<div id="NOAA_Alert">
  {% if APIData.alerts and APIData.alerts.length > 0 %}
    {% for alert in APIData.alerts %}
      <div class="alert {% if loop.index0 == 0 %}active{% else %}inactive{% endif %}">
        <h2>{{ alert.event }}</h2>
        <p>{{ alert.headline }}</p>
        {% if config.showDescription %}
          <p>{{ alert.description }}</p>
        {% endif %}
      </div>
    {% endfor %}
  {% else %}
    <div class="alert no-alert">
      {{ config.noAlertText }}
    </div>
  {% endif %}
</div>
