<div id="NOAA_Alert">
  {% if APIData.alerts and APIData.alerts.length > 0 %}
    {% for alert in APIData.alerts %}
      <div class="alert {% if loop.index0 == 0 %}active{% else %}inactive{% endif %} {{ alert.severity }}">
        <div class="title">
          <span class="event">{{ alert.event }}</span>
          <span class="headline">{{ alert.headline }}</span>
        </div>
        {% if config.showDescription %}
          <div class="description">{{ alert.description }}</div>
        {% endif %}
        {% if config.showInstruction %}
          <div class="instruction">{{ alert.instruction }}</div>
        {% endif %}
      </div>
    {% endfor %}
  {% else %}
    <div class="alert no-alert">
      {{ config.noAlertText }}
    </div>
  {% endif %}
</div>
